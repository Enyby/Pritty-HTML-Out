  <version>1.0.0</version>
  <description>PLG_SYSTEM_PRITTYHTMLOUT_PLUGIN_DESC</description>
  <files folder="site">
    <filename plugin="prittyhtmlout">prittyhtmlout.php</filename>
    <filename>prittyhtmlout_CHANGELOG.php</filename>
    <filename>jsbeautifier.php</filename>
    <filename>index.html</filename>
  </files>
  <languages>
    <language tag="en-GB">en-GB.plg_system_prittyhtmlout.ini</language>
    <language tag="en-GB">en-GB.plg_system_prittyhtmlout.sys.ini</language>
    <language tag="de-DE">de-DE.plg_system_prittyhtmlout.ini</language>
    <language tag="de-DE">de-DE.plg_system_prittyhtmlout.sys.ini</language>
  </languages>
  <params />
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="indent_type" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_INDENT_TYPE_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_INDENT_TYPE_LABEL" size="10" default=" ">
          <option value=" ">PLG_SYSTEM_PRITTYHTMLOUT_SPACE</option>
          <option value="\t">PLG_SYSTEM_PRITTYHTMLOUT_TABULATOR</option>
        </field>
	    <field name="indent_size" type="text" description="PLG_SYSTEM_PRITTYHTMLOUT_INDENT_SIZE_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_INDENT_SIZE_LABEL" size="2" default="2" />
        <field name="onAdmin" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_ACTIVATE_BACKEND_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_ACTIVATE_BACKEND_LABEL" default="1">
          <option value="1">PLG_SYSTEM_PRITTYHTMLOUT_YES</option>
          <option value="0">PLG_SYSTEM_PRITTYHTMLOUT_NO</option>
        </field>
        <field name="onSite" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_ACTIVATE_FRONTEND_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_ACTIVATE_FRONTEND_LABEL" default="1">
          <option value="1">PLG_SYSTEM_PRITTYHTMLOUT_YES</option>
          <option value="0">PLG_SYSTEM_PRITTYHTMLOUT_NO</option>
        </field>
        <field name="formatHTML" id="formatHTML" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_HTML_TAGS_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_HTML_TAGS_LABEL" size="10" default="0" disabled="false">
          <option value="1">PLG_SYSTEM_PRITTYHTMLOUT_YES</option>
          <option value="0">PLG_SYSTEM_PRITTYHTMLOUT_NO</option>
        </field>
        <field name="formatStyle" id="formatStyle" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_STYLE_TAGS_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_STYLE_TAGS_LABEL" size="10" default="0" disabled="false">
          <option value="1">PLG_SYSTEM_PRITTYHTMLOUT_YES</option>
          <option value="0">PLG_SYSTEM_PRITTYHTMLOUT_NO</option>
        </field>
        <field name="formatScript" id="formatScript" type="radio" description="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_SCRIPT_TAGS_DESC" label="PLG_SYSTEM_PRITTYHTMLOUT_FORMAT_SCRIPT_TAGS_LABEL" size="10" default="0" disabled="false">
          <option value="1">PLG_SYSTEM_PRITTYHTMLOUT_YES</option>
          <option value="0">PLG_SYSTEM_PRITTYHTMLOUT_NO</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>